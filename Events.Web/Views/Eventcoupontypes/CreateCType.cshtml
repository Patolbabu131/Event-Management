@model Events.Web.Models.Eventcoupontype

@{   
    var id = ViewBag.eid;
}

<div class="modal fade" id="addCTypee" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Type of Coupon</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="ctypeform">
                
                <div class="modal-body">
                
                <input type="text" id="Coupontype" value="" hidden/>
                    <div class="form-group" hidden>
                    <label asp-for="EventId" class="control-label"></label>
                    <input type="text" value="@id" id="EventId" class="form-control" >
                </div>
                <div class="form-group">
                    <label asp-for="CouponName" class="control-label"></label>
                        <input type="text" class="form-control" id="CouponName" name="CouponName" maxlength="100" />
                        <span asp-validation-for="CouponName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CouponPrice" class="control-label"></label>
                    <input class="form-control" type="text" id="CouponPrice" name="CouponPrice" />                    
                    <span asp-validation-for="CouponPrice" class="text-danger"></span>
                </div><br>
                <div class="form-group">
                        <label class="form-label">Is Active?</label>
                        <input type="checkbox" id="Active" value=""/>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="CreatedBy" class="control-label" ></label>
                    <select asp-for="CreatedBy" id="CreatedBy" class="form-control" asp-items="ViewBag.CreatedBy"></select>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="CreatedOn" class="control-label"></label>
                    <input type="date" id="CreatedOn" value="" class="form-control" />
                    <span asp-validation-for="CreatedOn" class="text-danger"></span>
                </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
                        <button type="button" onclick="save_ctype()" class="btn btn-primary">Save</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
