<!-- Edit Event Modal -->
<div class="modal fade" id="editEventModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formEditEvent" method="POST">
                <div class="modal-body">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="editEventName" class="form-label">Event Name</label>
                            <input class="form-control" type="text" id="editEventName" name="editEventName" value="Lohri" />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="editEventDate" class="form-label">Event Date</label>
                            <input class="form-control" type="date" name="editEventDate" id="editEventDate" value="2023-01-13" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label for="editEventVenue" class="form-label">Event Venue</label>
                            <textarea class="form-control" id="editEventVenue" name="editEventVenue">Hotel Yuvraj, Station Road, Vadodara</textarea>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="editStartTime" class="form-label">Start Time</label>
                            <input class="form-control" type="time" name="editStartTime" id="editStartTime" value="18:00" />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="editEndTime" class="form-label">End Time</label>
                            <input class="form-control" type="time" id="editEndTime" name="editEndTime" value="20:00" />
                        </div>
                        <div class="col-md-12">
                            <label for="editFoodCouponRate" class="form-label">Food Coupon Rate</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bx bx-rupee"></i></span>
                                <input class="form-control" type="text" name="editFoodCouponRate" id="editFoodCouponRate" value="2000" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Details Sponsors Modal -->
<div class="modal fade zindex-modal" id="detailsSponsorsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="btn-close position-absolute end-0" data-bs-dismiss="modal" aria-label="Close"></button>
            <div id="carousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block" src="https://via.placeholder.com/560X360" alt="First slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="https://via.placeholder.com/560X360" alt="Second slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="https://via.placeholder.com/560X360" alt="Third slide" />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carousel" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

