<div class="modal fade" id="addEventModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formAddEvent">
                <div class="modal-body">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <input type="text" id="EventID" hidden>
                            <label for="addEventName" class="form-label">Event Name</label>
                            <input type="text" class="form-control" id="addEventName" name="addEventName" maxlength="100" />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="addEventDate" class="form-label">Event Date</label>
                            <input class="form-control" type="text" name="addEventDate" placeholder="DD/MM/YYYY" id="addEventDate" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label for="addEventVenue" class="form-label">Event Venue Address</label>
                            <textarea class="form-control" id="addEventVenue" name="addEventVenue" maxlength="500"></textarea>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="addStartTime" class="form-label">Start Time</label>
                            <input class="form-control" type="text" name="addStartTime" id="addStartTime" placeholder="HH:MM" autocomplete="off" />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="addEndTime" class="form-label addEndTime">End Time</label>
                            <input class="form-control" type="text" id="addEndTime" name="addEndTime" placeholder="HH:MM" autocomplete="off" />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="eventStatus" class="form-label">Event Status</label>
                            <select class="form-control" for="eventStatus"  name="eventStatus" id="eventStatus">
                                <option value="Please Select Event Status">Select Event Status</option>
                                <option value="Active">Active</option>
                                <option value="UpComing">UpComing</option>
                                <option value="Completed">Completed</option>
                           </select>
                        </div>
                         <div class="mb-3 col-md-12">
                           <label  class="form-label">Food Menu</label>
                            <textarea class="form-control FoodMenu" id="FoodMenu" name="FoodMenu"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
                    <button type="button" onclick="save_event()" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
