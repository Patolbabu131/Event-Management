<!-- Add Event Modal -->
<div class="modal fade" id="addEventModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formAddEvent">
                <div class="modal-body">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <input type="text" id="EventID" hidden>
                            <label for="addEventName" class="form-label">Event Name</label>
                            <input class="form-control" type="text" id="addEventName" name="addEventName" />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="addEventDate" class="form-label">Event Date</label>
                            <input class="form-control" type="date" name="addEventDate" id="addEventDate" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label for="addEventVenue" class="form-label">Event Venue</label>
                            <textarea class="form-control" id="addEventVenue" name="addEventVenue"></textarea>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="addStartTime" class="form-label">Start Time</label>
                            <input class="form-control" type="time" name="addStartTime" id="addStartTime" />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="addEndTime" class="form-label">End Time</label>
                            <input class="form-control" type="time" id="addEndTime" name="addEndTime" />
                        </div>
                    
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
                    <button type="button" onclick="save_event()" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>