@model IEnumerable<Events.Web.Models.Eventsponsorsimage>

@{
    ViewData["Title"] = "Index";
    var id = ViewBag.Eid;
    var iid = ViewBag.VBFriend.EventName;
    var edate = ViewBag.VBFriend.EventDate;
    var evenue = ViewBag.VBFriend.EventVenue;
    var estarttime = ViewBag.VBFriend.EventStartTime;
    var eendtime = ViewBag.VBFriend.EventEndTime;
    var eyear = ViewBag.VBFriend.EventYear;
    var ecreatedon = ViewBag.VBFriend.CreatedOn;
    var emodifiedon = ViewBag.VBFriend.ModifiedOn;
}

<html>
  <head>
    <style>
        .leftside {
            width: 400px;
        }

        .rightside {
            width: 400px;
            display: flex;
            justify-content: start;
        }

        .event-label {
            display: inline-block;
            width: 150px;
            font-weight: bold;
        }

        .event-answer {
            display: inline-block;
            margin-left: 10px;
        }

        .address-container {
            display: flex;
            align-items: flex-start;
        }
    </style>
  </head>
<body onload="imgtable(@id)">
    
    <div class="card " style=" margin-bottom: 15px">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <div class="leftside" >
                        <span class="event-label">Event Name :</span> @ViewBag.VBFriend.EventName<br>
                        <span class="event-label">Event Date :</span> @ViewBag.VBFriend.EventDate.ToString(string.Format("dd/MM/yyyy"))<br>
                        <span class="event-label">Event Start Time :</span> @ViewBag.VBFriend.EventStartTime.ToString(string.Format("hh:mm"))<br>
                        <span class="event-label">Event End Time :</span>  @ViewBag.VBFriend.EventStartTime.ToString(string.Format("hh:mm"))<br>
                    </div>
                </div>
                <div class="col-md-1">
                    <hr width="1" style="0 auto" />
                </div>
                <div class="col">
                    <div class="rightside">
                        <div><span style="font-weight: bold;">Event Venue :    </span>  </div>
                        <div style="margin-left:2em;"><span>  @Html.Raw(ViewBag.VBFriend.EventVenue.Replace("\n","<br/>"))</span> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="image"></div>
    <div class="row">
        <div class="col-6">
            <h2 class="fw-bold mb-4">Spounsor Images</h2>
            @Html.ActionLink("Back to List", "Index","Events")
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" onclick="create_i(@id);">Add Image</a>
        </div>
    </div>
    <div class="card shadow">
        <div class="card-body">
            <table id="Eventsponsorsimagestable" class="table">
                <thead>
                    <tr>
                        <th>image</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

@section Scripts
{
    <script src="~/lib/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/Custom/jquery-extensions.js"></script>
    <script src="~/Scripts/Common.js"></script>
    <script src="~/Scripts/Eventsponsorsimages/index.js"></script>
}