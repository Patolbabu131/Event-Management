@model Events.Web.Models.Eventsponsorsimage

@{
    ViewData["Title"] = "Edit";
}

<div class="modal fade" id="Editimage" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="imageform">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="text" id="Id" value=""/ hidden>
                    <div class="form-group">
                        <label asp-for="EventId" class="control-label"></label>
                        <input type="text" name="EventId" id="EventId" class="form-control" value="">
                        <span asp-validation-for="EventId" class="text-danger"></span>
                    </div><br>
                    <div class="form-group">
                        <label  class="control-label"> Current Image</label>
                        <img src="" width="200" id="simage" class="form-control">
                    </div><br>
                    <div class="form-group">
                        <label asp-for="SponsorImage" class="control-label"></label>
                        <input type="File" id="File" name="File" class="form-control" />
                        @*<input type="file" class="form-control" />*@
                        <span asp-validation-for="SponsorImage" class="text-danger"></span>
                    </div>
                    <hr>
                    <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
                    <button type="button" onclick="save_image()" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
