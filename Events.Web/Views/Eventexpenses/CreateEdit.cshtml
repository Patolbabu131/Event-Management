@model Events.Web.Models.Eventexpense

@{
    ViewData["Title"] = "Create";
    var id = ViewBag.eid;
}

<div class="modal fade" id="createexpenses" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Expense</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Create" id="formAddExpenses">
                
                <div class="modal-body">
                    <input type="text" id="expensesid" hidden></input>
                    <div class="form-group" hidden>
                        <label asp-for="EventId" class="control-label"></label>
                        <input type="text" id="EventId" class="form-control" value="@id" ></input>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpenseName" class="control-label"></label>
                        <input type="text" name="ExpenseName" id="ExpenseName" class="form-control" maxlength="100" />
                        <span asp-validation-for="ExpenseName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ExpenseSubject" class="control-label"></label>
                        <input type="text" name="ExpenseSubject" id="ExpenseSubject" class="form-control" maxlength="300" />
                        <span asp-validation-for="ExpenseSubject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AmountSpent" class="control-label"></label>
                        <input type="number" name="AmountSpent" id="AmountSpent" class="form-control" />
                        <span asp-validation-for="AmountSpent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Remarks" class="control-label"></label>
                        <textarea name="Remarks" id="Remarks" class="form-control" ></textarea>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
                        <button type="button" onclick="save_eexpenses()" class="btn btn-primary">Save</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
